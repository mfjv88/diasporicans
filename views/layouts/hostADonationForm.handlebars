{{#> layout}}
<!-- Host a donation center -->
<div class="row" id="host">
  <div class="col-xs-12">
    <h3>Don't see your area? Host a donation center (with an organization, non-for-profit or a for-profit company willing to donate time; You don't have to be Puerto Rican to host)!</h3>
    <form method="POST" action="/form/host-center" data-toggle="validator" role="form" id="host-center-form">
      <!-- Name -->
      <div class="form-group">
        <label for="FirstNameHost">First Name</label>
        <input name="FirstNameHost" type="text" class="form-control" id="FirstNameHost" placeholder="First Name" required>
      </div>
      <div class="form-group">
        <label for="LastNameHost">Last Name</label>
        <input name="LastNameHost" type="text" class="form-control" id="LastNameHost" placeholder="Last Name" required>
      </div>
      <!-- Email address -->
      <div class="form-group">
        <label for="EmailHost">Email address</label>
        <input name="EmailAddressHost" type="email" class="form-control" id="EmailHost" placeholder="Email" required>
      </div>
      <!-- Telephone -->
      <div class="form-group">
        <label for="TelephoneHost">Telephone</label>
        <input name="TelephoneHost" type="tel" class="form-control" id="TelephoneHost" placeholder="Telephone" required>
      </div>
      <!-- Address -->
      <div class="form-group">
        <label for="StreetAddress">Street Address</label>
        <input name="StreetAddressHost" type="text" class="form-control" id="StreetAddressHost" placeholder="Street Address" required>
      </div>
      <div class="form-group">
        <label for="City">City</label>
        <input name="CityHost" type="text" class="form-control" id="CityHost" placeholder="City" required>
      </div>
      <div class="form-group">
        <label for="State">State</label>
        <input name="StateHost" type="text" class="form-control" id="StateHost" placeholder="State" required>
      </div>
      <div class="form-group">
        <label for="Zip">Zip Code</label>
        <input name="ZipHost" type="text" class="form-control" id="ZipHost" placeholder="Zip" required>
      </div>
      <!-- Is this a residence? -->
      <div class="form-group">
        <p>Is this address a residence?</p>
        <label class="radio-inline">
          <input type="radio" name="residence" id="residence" value="true" required> Yes
        </label>
        <label class="radio-inline">
          <input type="radio" name="residence" id="not_residence" value="false"> No
        </label>
      </div>
      <!-- Time frame -->
      <div class="form-group">
        <p>Date &amp; Time</p>
        <label for="FromTimeHost">From:</label>
        <input type="text" name="FromTimeHost" id="FromTimeHost" data-format="MM-DD-YYYY h:mm a" data-template="MM / DD / YYYY       hh : mm a" required>
        <br><br>
        <label for="ToTimeHost">To:</label>
        <input type="text" name="ToTimeHost" id="ToTimeHost" data-format="MM-DD-YYYY h:mm a" data-template="MM / DD / YYYY       hh : mm a" required>
      </div>
      <!-- Accepts T&C -->
      <div class="checkbox">
        <label>
          <input name="accept" type="checkbox" required> I understand that this information could be shared with third parties that would need my help and this is on a volunteer basis.
        </label>
      </div>
      <!-- Submit button -->
      <p> By submitting, I accept to be contacted by website organizers if any doubts come up and accept that all donations will be FULLY used for Hurricane Relief in Puerto Rico (i.e. No personal profits)</p>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </div>
</div>

<hr>
{{/layout}}
